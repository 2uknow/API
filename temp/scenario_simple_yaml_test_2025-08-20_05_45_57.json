{
  "info": {
    "name": "SClient 기본 연결 테스트",
    "description": "SClient 바이너리를 사용한 기본 연결 및 응답 테스트",
    "version": "1.0.0",
    "schema": "sclient-scenario/v1.0.0"
  },
  "variables": [
    {
      "key": "MERCHANT_ID",
      "value": "A010002002",
      "description": "Variable: MERCHANT_ID"
    },
    {
      "key": "MERCHANT_PWD",
      "value": "bbbbb",
      "description": "Variable: MERCHANT_PWD"
    },
    {
      "key": "SERVICE_NAME",
      "value": "TELEDIT",
      "description": "Variable: SERVICE_NAME"
    }
  ],
  "requests": [
    {
      "name": "ITEMSEND2 - 기본 연결 테스트",
      "description": "SClient를 통한 기본 결제 서버 연결 테스트",
      "command": "ITEMSEND2",
      "arguments": {
        "SERVICE": "{{SERVICE_NAME}}",
        "ID": "{{MERCHANT_ID}}",
        "PWD": "{{MERCHANT_PWD}}"
      },
      "tests": [
        {
          "name": "Test: result exists",
          "script": "pm.test('result should exist', function() { pm.expect(pm.response.result).to.not.be.undefined; });"
        },
        {
          "name": "Test: serverInfo exists",
          "script": "pm.test('serverInfo should exist', function() { pm.expect(pm.response.serverinfo).to.not.be.undefined; });"
        }
      ],
      "extractors": [
        {
          "name": "result",
          "pattern": "Result=([0-9]+)",
          "variable": "RESULT_CODE"
        },
        {
          "name": "serverInfo",
          "pattern": "ServerInfo=([A-Fa-f0-9]+)",
          "variable": "SERVER_INFO"
        },
        {
          "name": "errMsg",
          "pattern": "ErrMsg=(.+?)[\\r\\n]",
          "variable": "ERROR_MESSAGE"
        }
      ]
    }
  ],
  "events": {
    "prerequest": [],
    "test": []
  }
}